{
  "name": "electron-base",
  "version": "0.0.1",
  "description": "A base for making es6/angular 1.x electron apps",
  "main": "dist/electron/bundle.js",
  "scripts": {
    "section:run": "echo \"RUN SCRIPTS\"                                        ",
    "spacer:run": "echo  \"\"                                                   ",
    "start:electron": "electron ./dist/electron/bundle.js",
    "start:express": "node dist/express/bundle.js",
    "dev:electron": "concurrent --kill-others \"npm run start:electron\" \"npm run watch:electron\"",
    "dev:express": "concurrent --kill-others \"nodemon dist/express/bundle.js --watch dist/express\" \"npm run watch:express\"",
    "predev:electron": "npm run build:electron",
    "predev:express": "npm run build:express",
    "section:singlebuild": "echo \"SINGLE-BUILD SCRIPTS\"                       ",
    "spacer:singlebuild": "echo                                                 ",
    "build:electron:only": "browserify --node -u electron ./src/electron/main.js -t [babelify --presets es2015] -o ./dist/electron/bundle.js",
    "build:express:only": "browserify --node -u electron ./src/express/index.js -t [babelify --presets es2015] -o ./dist/express/bundle.js",
    "watch:electron:only": "watchify --node -u electron ./src/electron/main.js -t [babelify --presets es2015] -o ./dist/electron/bundle.js",
    "watch:express:only": "watchify --node -u electron ./src/express/index.js -t [babelify --presets es2015] -o ./dist/express/bundle.js",
    "deploy:electron:only": "npm run build:electron",
    "deploy:express:only": "npm run build:express",
    "section:build": "echo \"BUILD SCRIPTS\"                                    ",
    "spacer:build": "echo  \"\"                                                 ",
    "build:frontend": "browserify ./src/frontend.entry.js --exclude electron -t [babelify --presets es2015] -t [partialify] -g [browserify-css] -o ./dist/frontend/bundle.js -dv",
    "watch:frontend": "watchify ./src/frontend.entry.js --exclude electron -t [babelify --presets es2015] -t [partialify] -g [browserify-css] -o ./dist/frontend/bundle.js -dv",
    "deploy:frontend": "browserify ./src/frontend.entry.js --exclude electron -t [babelify --presets es2015] -t [partialify] -g [browserify-css] | uglifyjs -mc --screw-ie8 > ./dist/frontend/bundle.js",
    "build:electron": "concurrent \"npm run build:electron:only\" \"npm run build:frontend\"",
    "watch:electron": "concurrent --kill-others \"npm run watch:electron:only\" \"npm run watch:frontend\"",
    "deploy:electron": "concurrent \"npm run deploy:electron:only\" \"npm run deploy:frontend\"",
    "predeploy:electron": "eslint src/electron/ src/frontend/",
    "build:express": "concurrent \"npm run build:express:only\" \"npm run build:frontend\"",
    "watch:express": "concurrent --kill-others \"npm run watch:express:only\" \"npm run watch:frontend\"",
    "deploy:express": "concurrent \"npm run deploy:express:only\" \"npm run deploy:frontend\"",
    "predeploy:express": "eslint src/express src/frontend",
    "section:package": "echo \"PACKAGE SCRIPTS\"                                ",
    "spacer:package": "echo \"\"                                                ",
    "package:electron": "electron-packager ./ ElectronBase --out deploy --arch x64 --platform linux --version 0.36.2 --asar 1 --overwrite 1 --ignore=node_modules",
    "prepackage:electron": "npm run deploy:electron"
  },
  "author": "Aaron Ballard",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-css": "^0.8.4",
    "concurrently": "^1.0.0",
    "electron-packager": "^5.2.0",
    "electron-prebuilt": "^0.36.2",
    "eslint": "^1.10.3",
    "nodemon": "^1.8.1",
    "partialify": "^3.1.5",
    "uglify-js": "^2.6.1",
    "uglifyify": "^3.0.1",
    "watchify": "^3.6.1"
  },
  "dependencies": {
    "angular": "^1.4.8",
    "angular-route": "^1.4.8",
    "body-parser": "^1.14.2",
    "bootstrap": "^3.3.6",
    "express": "^4.13.3",
    "method-override": "^2.3.5"
  }
}
